    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/zebra.js",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Arduino",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/zebra.js",
            "args": ["arduino.sz", "arduino"],
            "console": "integratedTerminal"
        }
    ]
}